extends landing

block signin
  div.registerForm
    form.login(action='/auth/login' method='POST')
      input(type='text' name='username' placeholder='Username' required)
      input(type='password' name='password' placeholder='Password' required)
      input(type='submit' class='login-button' value='Login')
    form.demoLogin(action=`/auth/login` method='POST')
      input.demoText(type='text' name='username' value='habitap' required)
      input.demoPassword(type='password' name='password' value='helloworld' required)
      input(type='submit',class='edit-button',value='Demo Habitap?')