extends 1layout

block content
  div.y-template
    h2 Delete Habit Entry
    each index in habits
      div #{index.question}
      div #{index._id}
        form.daily(action=`/users/${username}/delete/${index._id}/${index.question}` method='post')
          input(type='submit',habit=`${index._id}`,question=`${index.question}`,class='login-button',value='Delete')